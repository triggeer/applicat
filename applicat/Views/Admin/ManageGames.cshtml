@model IEnumerable<applicat.Models.Game>
@{
    ViewData["Title"] = "Управление играми";
}

<h2>Управление играми</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Добавить игру</a>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Жанр</th>
            <th>Описание</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Title</td>
                <td>@game.Genre</td>
                <td>@game.Description</td>
                <td>
                    <a asp-action="EditGame" asp-route-id="@game.Id" class="btn btn-primary btn-sm">Редактировать</a>

                    <form asp-action="DeleteGame" asp-route-id="@game.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>